@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

<h1>All Authors Data</h1>

<p>
    <a asp-action="InsertAuthor">Create New Author</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateAuthor", new { id=item.id }) |
                @Html.ActionLink("Details", "GetAuthorById", new { id=item.id }) |
                @Html.ActionLink("Delete", "DeleteAuthor", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
